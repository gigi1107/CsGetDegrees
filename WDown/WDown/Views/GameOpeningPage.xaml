<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WDown.Views.GameOpeningPage" Title="Game">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="0">
                <Label Text="Watership Down" HorizontalOptions="Center" FontSize="Large" />
                <Label Text="the game" HorizontalOptions="Center" FontSize="Small" />
                <StackLayout Padding="0"
                             Margin = "0">
                
                    <Image Source="http://www.claretwalker.com/wp-content/uploads/IMG_3000-1.jpg"
                           HeightRequest = "250"/>
                    </StackLayout>
                    <Button Text="Auto Battle"
                            Clicked="AutoBattle_Clicked"/>
                    <Button Text="Regular Battle"
                            Clicked="RegularBattle_Clicked"/>
                    <Button Text="Battle Character select page"
                            Clicked="Character_Select_Clicked"/>
                    <Button Text="Battle Monster list page"
                            Clicked="Monster_Select_Clicked"/>
                  
              
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>