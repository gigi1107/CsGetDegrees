<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WDown.Views.Battle.BattleOpeningPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Label Text="Welcome to our Watership Down Game" HorizontalOptions="Center" FontSize="Large" />
                <Label Text="STARTING REGULAR BATTLE..." HorizontalOptions="Center" FontSize="Small" />
                <StackLayout Padding="0"
                             Margin = "0">

                    <Image Source="http://www.claretwalker.com/wp-content/uploads/IMG_3000-1.jpg"
                           HeightRequest = "250"/>
                </StackLayout>
                <Button Text="Let's start with Selecting your Party!"
                            Clicked="Character_Select_Clicked"/>
                <Image Source="https://www.solec.org/wp-content/uploads/2015/02/icon-horizontal.png"
                       WidthRequest = "100"
                       HeightRequest = "100"/>
                <Label Text="Rotate your device now ..." />


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>