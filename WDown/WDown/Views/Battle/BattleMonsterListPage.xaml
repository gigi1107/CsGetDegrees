<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WDown.Views.Battle.BattleMonsterListPage"
             Title="Monster List">

    <ContentPage.Content>

        <ScrollView>
            <StackLayout
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">

                <Label Text="You are currently fighting with these monsters..."
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" 
                FontSize="Large"/>

                <StackLayout
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">

                    <FlexLayout x:Name="MonsterListFrame"
                                HorizontalOptions="CenterAndExpand"
                                VerticalOptions="CenterAndExpand"
                                Padding="5"/>

                </StackLayout>

                <Button Clicked="OnNextClicked" Text="Next"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>